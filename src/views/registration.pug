extends base

block content
    main
        #content
            #registration-authorization
                form#registration-form
                    h2 Реєстрація
                    input(type="text", name="login", placeholder="Логiн", required)
                    input(type="password", id="password", name="password", placeholder="Введіть пароль", required)
                    #password-error Паролі не збігаються
                    button(type="submit") Зареєструватися
                    a#transition(href="authorization.html") Повернутись назад
        button#scroll-to-top._icon-arrow-circle-up
    script(src="/js/registration.js")
